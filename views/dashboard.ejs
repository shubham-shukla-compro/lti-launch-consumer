<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LMS Resources</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      padding: 20px;
    }

    .container {
      max-width: 600px;
      margin: 0 auto;
      background-color: #fff;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
      border-bottom: 2px solid #e5e5e5;
      padding-bottom: 10px;
      margin-bottom: 20px;
    }

    .section {
      margin-bottom: 20px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
    }

    .resource {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #f0f0f0;
      padding: 10px;
      margin-bottom: 5px;
      border-left: 4px solid #007bff;
      cursor: pointer;
    }

    .resource:hover {
      background-color: rgba(0, 0, 0, 0.1);
    }

    .code {
      color: #555;
      font-size: 12px;
      width: 70px;
    }

    .file-type {
      color: #888;
      font-size: 12px;
      flex-grow: 2;
    }

    button {
      background-color: #007bff;
      color: #fff;
      border: none;
      padding: 5px 15px;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      background-color: #0056b3;
    }
  </style>

  <script>
    function launchCourse(courseId, courseType) {
      fetch('/lti-launch', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: `courseId=${courseId}&courseType=${courseType}`,
      })
        .then(response => response.text())
        .then(html => {
          const popup = window.open("", "_blank");
          popup.document.write(html);
          popup.document.forms[0].submit();
        });
    }
  </script>
</head>

<body>
  <div class="container">
    <h1>Santillana LTI Examples</h1>

    <div class="section">
      <div class="header">
        <h2>3 Primary-Science (no borrar - LMS)</h2>
      </div>
      <h3>For teachers</h3>
      <div class="resource" onclick="launchCourse('685407', 'primary')">
        <span class="code">685407</span>
        <span>Audio 1</span>
      </div>
      <div class="resource" onclick="launchCourse('685409', 'primary')">
        <span class="code">685409</span>
        <span>Document 1</span>
      </div>
      <div class="resource" onclick="launchCourse('685411', 'primary')">
        <span class="code">685411</span>
        <span>Document 2</span>
      </div>
      <div class="resource" onclick="launchCourse('685412', 'primary')">
        <span class="code">685412</span>
        <span>Interactive 1</span>
      </div>
      <h3>For the student</h3>
      <div class="resource" onclick="launchCourse('685416', 'primary')">
        <span class="code">685416</span>
        <span>Video 1</span>
      </div>
      <div class="resource" onclick="launchCourse('685418', 'primary')">
        <span class="code">685418</span>
        <span>Document 2</span>
      </div>
    </div>

    <div class="section">
      <div class="header">
        <h2>3 Secondary-Biology (no borrar - LMS)</h2>
      </div>
      <h3>For teachers</h3>
      <div class="resource" onclick="launchCourse('685408', 'secondary')">
        <span class="code">685408</span>
        <span>Audio 1</span>
      </div>
      <div class="resource" onclick="launchCourse('685413', 'secondary')">
        <span class="code">685413</span>
        <span>Interactive 1</span>
      </div>
      <div class="resource" onclick="launchCourse('685415', 'secondary')">
        <span class="code">685415</span>
        <span>Document 2</span>
      </div>
      <h3>For the student</h3>
      <div class="resource" onclick="launchCourse('685410', 'secondary')">
        <span class="code">685410</span>
        <span>Document 1</span>
      </div>
      <div class="resource" onclick="launchCourse('685414', 'secondary')">
        <span class="code">685414</span>
        <span>Interactive 2</span>
      </div>
      <div class="resource" onclick="launchCourse('685417', 'secondary')">
        <span class="code">685417</span>
        <span>Video 1</span>
      </div>
    </div>
  </div>
</body>

</html>